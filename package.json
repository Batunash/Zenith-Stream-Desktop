{
  "name": "zenith-stream-desktop",
  "productName": "Zenith Stream",
  "version": "1.0.1",
  "description": "Premium Video Streaming Experience",
  "main": "main/main.js",
  "author": {
    "name": "Batunash",
    "email": "okullubatuhan@gmail.com"
  },
  "license": "ISC",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "start": "electron .",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder -wjl"
  },
  "build": {
    "appId": "com.batunash.zenithstream",
    "productName": "Zenith Stream",
    "copyright": "Copyright Â© 2025 batunash",
    "directories": {
      "output": "release"
    },
    "files": [
      "package.json",
      ".env",
      "dist/**/*",
      "main/**/*",
      "backend/**/*",
      "config/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "extraResources": [
        {
          "from": "resources/bin/win",
          "to": "bin/win",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Video",
      "icon": "assets/icon.png",
      "artifactName": "${name}-${version}-Linux-${arch}.${ext}",
      "executableName": "zenith-stream-desktop",
      "synopsis": "Premium Video Streaming App",
      "extraResources": [
        {
          "from": "resources/bin/linux",
          "to": "bin/linux",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png",
      "category": "public.app-category.entertainment",
      "artifactName": "${productName}-${version}-Mac.${ext}",
      "extraResources": [
        {
          "from": "resources/bin/mac",
          "to": "bin/mac",
          "filter": [
            "**/*"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "i18next": "^25.6.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.4.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.1.3",
    "sql.js": "^1.12.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "vite": "^6.0.7"
  }
}
